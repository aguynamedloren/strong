h4.m-b-2
  = link_to "Exercises", exercises_path
  = " - "
  = @exercise.name

= line_chart @chart.data, library: @chart.options

.m-b-2.text-sm-center
  .btn-group.m-r-2
    = chart_filter "Day", "time_interval", "day", default: true
    = chart_filter "Week", "time_interval", "week"

  .btn-group.m-r-2
    = chart_filter "Maximum", "query_type", "maximum", default: true
    = chart_filter "Average", "query_type", "average"

  .btn-group
    = chart_filter "Weight", "measure", "weight", default: true
    = chart_filter "1RM", "measure", "one_rep_max"
    = chart_filter "Volume", "measure", "volume"

.table
  .table-header
    .col-sm-2
      | Exercise Date
    .col-sm-2
      | Weight
    .col-sm-2
      | 1RM
    .col-sm-2
      | Volume
    .col-sm-2
      | Reps
    .col-sm-2
      | Set Order
  - @exercise_sets.each do |set|
    .table-row
      .col-sm-2
        = set.workout_date
      .col-sm-2
        = set.weight_with_units
      .col-sm-2
        = set.one_rep_max_with_units
      .col-sm-2
        = set.volume_with_units
      .col-sm-2
        = set.reps
      .col-sm-2
        = set.order
